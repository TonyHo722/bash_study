alias catb='cat ~/.bashrc'
alias catbg='cat ~/.bashrc | grep'
alias vit='vi ~/.bashrc_tony'

alias l='ls'
alias lm='ls -l | more'
alias lsd='ls -d */'
alias md='mkdir'
alias rd='rmdir'
alias gitbp='pushd .;cd ~/workspace/bash_study;git pull;popd'

